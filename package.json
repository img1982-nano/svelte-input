{
  "name": "@jill64/svelte-input",
  "version": "0.3.9",
  "description": "Input component set for Svelte",
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "jill64 <intents.turrets0h@icloud.com> (https://github.com/jill64)",
  "bugs": "https://github.com/jill64/svelte-input/issues",
  "homepage": "https://github.com/jill64/svelte-input#readme",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jill64/svelte-input.git"
  },
  "keywords": [
    "component"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "pnpm build && vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write . --plugin prettier-plugin-svelte .",
    "lint": "prettier --check . --plugin prettier-plugin-svelte . && eslint ."
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@jill64/svelte-toast": "0.1.5",
    "@playwright/test": "1.38.1",
    "@sveltejs/adapter-static": "2.0.3",
    "@sveltejs/kit": "1.25.1",
    "@sveltejs/package": "2.2.2",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-svelte": "2.33.2",
    "prettier": "3.0.3",
    "prettier-plugin-svelte": "3.0.3",
    "publint": "0.2.3",
    "svelte-check": "3.5.2",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "4.4.9"
  },
  "dependencies": {
    "@jill64/async-observer": "^1.0.0",
    "@jill64/svelte-device-theme": "^1.0.0",
    "svelte": "4.2.1",
    "svelte-loading-spinners": "^0.3.4"
  }
}
